model SpecialOffer {
  id String @id @default(uuid()) @db.Uuid

  condition      EnumSpecialOfferCondition
  conditionValue String                    @map("condition_value")

  award      EnumSpecialOfferAward
  awardValue String                @map("award_value")

  users User[] @relation(name: "special_offer_to_user")

  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("special_offers")
}
