model Discount {
  id String @id @default(uuid()) @db.Uuid

  type EnumDiscountType

  discount Float
  products Product[] @relation(name: "discount_to_product")

  expiresAt DateTime?

  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("discounts")
}
